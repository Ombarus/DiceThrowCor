<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ombarus.dicedm" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="ShortcutsPlugin">
        <param name="android-package" value="com.plugins.shortcuts.ShortcutsPlugin" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Dice DM</name>
    <description>
        A fast, simple, practical dice throwing app for all.
    </description>
    <author email="ombarus.dev@gmail.com" href="http://ombarusdev.com">
        Ombarus
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icon/android/004-36.png" />
    <icon density="mdpi" src="res/icon/android/004-48.png" />
    <icon density="hdpi" src="res/icon/android/004-72.png" />
    <icon density="xhdpi" src="res/icon/android/007-96.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreenDelay" value="0" />
</widget>
