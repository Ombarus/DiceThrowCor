<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ombarus.dicedm" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dice DM</name>
    <description>
        A fast, simple, practical dice throwing app for all.
    </description>
    <author email="ombarus.dev@gmail.com" href="http://ombarusdev.com">
        Ombarus
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/ios/icon-180.png" width="180" />
        <icon height="60" src="res/ios/icon-60.png" width="60" />
        <icon height="120" src="res/ios/icon-120.png" width="120" />
        <icon height="76" src="res/ios/icon-76.png" width="76" />
        <icon height="152" src="res/ios/icon-152.png" width="152" />
        <icon height="40" src="res/ios/icon-40.png" width="40" />
        <icon height="80" src="res/ios/icon-80.png" width="80" />
        <icon height="57" src="res/ios/icon-57.png" width="57" />
        <icon height="114" src="res/ios/icon-114.png" width="114" />
        <icon height="72" src="res/ios/icon-72.png" width="72" />
        <icon height="152" src="res/ios/icon-152.png" width="152" />
        <icon height="167" src="res/ios/icon-167.png" width="167" />
        <icon height="87" src="res/ios/icon-87.png" width="87" />
        <icon height="58" src="res/ios/icon-58.png" width="58" />
        <icon height="50" src="res/ios/icon-50.png" width="50" />
        <icon height="100" src="res/ios/icon-100.png" width="100" />
        <icon height="167" src="res/ios/icon-167.png" width="167" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <preference name="FadeSplashScreenDuration" value="0" />
        <preference name="SplashScreenDelay" value="0" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/004-36.png" />
        <icon density="mdpi" src="res/icon/android/004-48.png" />
        <icon density="hdpi" src="res/icon/android/004-72.png" />
        <icon density="xhdpi" src="res/icon/android/007-96.png" />
        <preference name="SplashScreenDelay" value="0" />
    </platform>
    <plugin name="cordova-plugin-shortcuts-android" spec="^0.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="https://github.com/apache/cordova-plugin-splashscreen.git" />
    <engine name="android" spec="^7.1.1" />
</widget>
